services:
  db:
    image: mysql:8.0.34
    container_name: medi-mysql
    environment:
      MYSQL_ROOT_PASSWORD: 1234
      MYSQL_DATABASE: meditalk
      MYSQL_USER: mediuser
      MYSQL_PASSWORD: medi1234
    ports:
      - "${DB_EXTERNAL_PORT}:${DB_PORT}"
    volumes:
      - mysql-data:/var/lib/mysql
    restart: always
    networks:
      - medi-net
    healthcheck:
      test: ["CMD", "mysqladmin", "ping", "-h", "localhost", "-p1234"]
      interval: 30s
      timeout: 5s
      retries: 5

  opencv:
    build: ./opencv
    container_name: medi-opencv
    ports:
      - "8000:8000"
    restart: always
    networks:
      - medi-net
    depends_on:
      db:
        condition: service_healthy
    deploy:
      resources:
        reservations:
          devices:
            - driver: nvidia
              count: all
              capabilities: ["gpu"]
    environment:
      - NVIDIA_VISIBLE_DEVICES=all
      - NVIDIA_DRIVER_CAPABILITIES=compute,utility
    # ✅ 헬스체크 추가
    healthcheck:
      test: ["CMD", "curl", "-fsS", "http://localhost:8000/health"]
      interval: 15s
      timeout: 5s
      retries: 5

  backend:
    build: ./backend
    container_name: medi-backend
    ports:
      - "${EXTERNAL_PORT}:${PORT}"   # 외부 공개는 백엔드만
    env_file:
      - ./.env
    depends_on:
      db:
        condition: service_healthy
      opencv:
        condition: service_healthy   # OpenCV 준비되면 시작
    restart: always
    networks:
      - medi-net
    volumes:
      - ./backend/logs:/app/logs
    healthcheck:
      test: ["CMD", "curl", "-fsS", "http://localhost:3000/health"]
      interval: 30s
      timeout: 5s
      retries : 3

networks:
  medi-net:
 

volumes:
  mysql-data:

